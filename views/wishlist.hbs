        {{>pageInfo}}
       <div id="wishlist" class="product-table">
           <div class="inner">
               {{#if wishlist}}
               {{#if wishlist.items}}
               <table class="table">
                  <thead>
                    <tr>
                        <td>remove</td>
                        <td>image</td>
                        <td>product</td>
                        <td>unit price</td>
                        <td>stock status</td>
                        <td>add to cart</td>
                    </tr>
                  </thead>
                   <tbody>
                    {{#each wishlist.items }}
                   
                    <tr>
                        <td class="remove"> <a href="" data="{{this.id}}"> x </a> </td>
                        <td class="img"> <a href="/shop/product/{{this.name}}"> <img src= {{this.src.[0]}} alt=""> </a></td>
                        <td class="name"> <a href="/shop/product/{{this.name}}" >{{this.name}}</a> </td>
                        <td class="price"> ${{this.price}} </td>
                        <td class="stock"> in stock </td>
                        <td class="cart"><button onclick="addToCart('{{this.name}}')" class="btn b"> add to cart</button></td>
                   </tr>
                   {{/each}}
                   </tbody>
                   
               </table>
               {{else}} 
                {{>noItem}}
                {{/if}}
                {{else}}
                    {{>noItem}}
               {{/if}}
           </div>
       </div>
   
       